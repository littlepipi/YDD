<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/account_setting"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#36cd00" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:text="账户设置"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/setting_back"
            android:layout_width="50.0dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
           android:background="#36cd00"
            android:contentDescription="@null"
            android:src="@drawable/arrow_left_gray_white" />
    </RelativeLayout>

    <app.example.widget.OverScrollView
        android:id="@+id/change_nickname_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:orientation="vertical" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/portrait_useless"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:drawableRight="@drawable/arrow_right_gray_white"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:text="头像"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/portrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/xiaoma_one" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:orientation="vertical" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/nickname_useless"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:drawableRight="@drawable/arrow_right_gray_white"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:text="昵称"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="25dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="18sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:orientation="vertical" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/telephone_useless"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:text="账号"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:textSize="18sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:orientation="vertical" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/change_place_useless"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:drawableRight="@drawable/arrow_right_gray_white"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:text="切换城市/学校"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/change_place"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="25dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="18sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/change_password"
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:background="#ffffff"
                android:clickable="true"
                android:drawableRight="@drawable/arrow_right_gray_white"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="修改密码"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="100dp"
                    android:background="#d3d3d3"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/exit"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="#ff6347"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#d3d3d3"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </app.example.widget.OverScrollView>

</LinearLayout>