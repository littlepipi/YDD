<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/details_lost_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="55dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/postlostmessage_header_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/circle_gray" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="85dip"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/postlostmessage_header_image"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="昵称好长好长好长好长好长啊"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/postlostmessage_publishtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nickname"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="5dp"
                    android:text="发布时间"
                    android:textColor="#808080"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/postlostmessage_label"
                    android:layout_width="56dp"
                    android:layout_height="78dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/lable_car_num_two"
                    android:gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/postlostmessage_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="#a2793e"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/clock_num"
                    android:text=""
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lost_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:text="2015-04-15 23:43:59"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/map_num"
                    android:text=""
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lost_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:singleLine="false"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/details_num"
                    android:text=""
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lost_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:singleLine="false"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/lost_picture_image1"
                    android:layout_width="115dp"
                    android:layout_height="130dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/meinv" />

                <ImageView
                    android:id="@+id/lost_picture_image2"
                    android:layout_width="115dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="2dp"
                   
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/meinv" />

                <ImageView
                    android:id="@+id/lost_picture_image3"
                    android:layout_width="115dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="2dp"
                
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/meinv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titleattention_detailsost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="浏览量  "
                     android:textColor="#808080"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/titleattentionno_detailsost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="0"
                     android:textColor="#808080"
                    android:textSize="14sp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="   "
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/personlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="吉林大学南湖校区通信工程学院覃宏艺"
                    android:textColor="#808080"
                    android:textSize="14sp" />
                
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <TextView
                    android:id="@+id/phone_number_detailsost"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="1"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="电话" />

                <TextView
                    android:id="@+id/message_detailsost"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="短信" />

                <TextView
                    android:id="@+id/comment_detailsost"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="评论" />

                <TextView
                    android:id="@+id/share_detailslost"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="1"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="分享" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#808080"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:background="@drawable/background_green"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#808080"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:text="所有评论"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#808080"
                android:orientation="horizontal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>