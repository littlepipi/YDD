<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/change_location_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#d3d3d3"
        android:orientation="vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dip" >

        <TextView
            android:id="@+id/change_location_school_current_school"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:clickable="true"
            android:drawableRight="@drawable/arrow_right_gray_white"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:text="当前学校：                                  切换"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/change_location_school_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="100dip"
            android:text="吉林大学"
            android:textSize="18sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#d3d3d3"
        android:orientation="vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dip" >

        <TextView
            android:id="@+id/change_location_school_location_school_to_city"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:clickable="true"
            android:drawableRight="@drawable/arrow_right_gray_white"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:text="切换到城市                                 切换"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/change_location_school_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="100dip"
            android:text=""
            android:textSize="18sp" />
    </FrameLayout>

</LinearLayout>