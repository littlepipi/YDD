<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/feedback"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#36cd00" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/feedback_back"
                android:layout_width="50.0dip"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#36cd00"
                android:contentDescription="@null"
                android:src="@drawable/arrow_left_gray_white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/feedback_imageView02"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="10dip"
            android:background="#d3d3d3"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/feedback_text"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:background="#ffffff"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/feedback_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_transparent_post"
                android:gravity="top"
                android:hint="这里，可以写下您宝贵的建议哦！^o^"
                android:paddingLeft="5dip"
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/feedback_text_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/500个字"
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#d3d3d3"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="15dip"
            android:background="#d3d3d3"
            android:orientation="vertical" />

        <EditText
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="110dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_transparent_post"
            android:ems="10"
            android:gravity="top"
            android:hint="这里，可以留下您的联系方式哦！^o^"
            android:paddingLeft="5dip"
            android:paddingTop="10dip"
            android:textColor="#808080"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#d3d3d3"
            android:orientation="vertical" />
    </LinearLayout>

    <Button
        android:id="@+id/feedback_submit"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/text_orange_pink"
        android:text="@string/submit"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>