<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_chosen"
        android:duplicateParentState="true"
        android:paddingLeft="5dip" >

        <ImageView
            android:id="@+id/comments_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dip"
            android:src="@drawable/xiaoma" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/comments_header"
            android:paddingBottom="5dip" >

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/comments_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="45dip"
                    android:layout_marginTop="5dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="哈哈哈时间恶魔么hfhdjkhfkjsdhf"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/comments_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comments_nickname"
                    android:text="2015—5—15 42:26:29"
                    android:textColor="#7c7c7c"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comments_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/line"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dip"
                android:text="删除"
                android:textColor="@color/normal_orange_pressed_white"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/comments_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:text="几分恐惧而附近拉客人经过人家佛怕热家平均分割"
                    android:textColor="#808080"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>