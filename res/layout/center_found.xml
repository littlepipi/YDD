<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="55dip" >

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView_found"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />

        <ImageView
            android:id="@+id/qidian_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_map_pin" />

        <TextView
            android:id="@+id/message_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#fccccc"
            android:hint="此处显示您所在的位置......"
            android:textSize="20dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="#c1d3d3d3" >

            <TextView
                android:id="@+id/message2_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="此处显示您选定的的位置......"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/center_found"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="10dip"
            android:src="@drawable/center" />

        <ImageView
            android:id="@+id/imageView1_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ico_map_pin_shadow1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:background="#36cd00" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:text="地图"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dianji_found"
            android:layout_width="50.0dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/normal_write_pressed_gray"
            android:textSize="20dp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/map_foundback"
            android:layout_width="50.0dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00808080"
            android:contentDescription="@null"
            android:src="@drawable/arrow_left_gray_white" />
    </RelativeLayout>

</FrameLayout>